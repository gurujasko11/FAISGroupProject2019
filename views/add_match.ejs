<!DOCTYPE html>
<html>

<% include head.ejs %>
<!--Include head section (same for all pages)-->
<!--Javascripts includes-->

<script src='/javascripts/alert.js' type='text/javascript'></script>

<!--Inline Javascript-->
<script>
    function validateForm() {
        return true;
    }
</script>

<body>
<div id="alerts"></div>
<td id="page" class=page style="overflow: hidden;">      <!--Div page with id=page - main container-->
    <h1><%= title %></h1>

    <form method="POST" action="/match/add" onsubmit="return validateForm();">
        <table>
            <tr>
                <td>Drużyna I</td>
                <td><input id="title" type="text" name="team1" class="validate" required></td>
            </tr>
            <tr>
                <td>Drużyna II</td>
                <td><input id="title" type="text" name="team2" class="validate" required></td>
            </tr>

            <tr>
                <td>Data</td>
                <td><input id="beginDate" type="date" name="date" required></td>
            </tr>
            <tr>
                <td>Czas</td>
                <td><input id="match_time" type="time" name="time"></td>
            </tr>


            <tr>
                <td>Liga</td>
                <td><input id="league" name="league" type="text" class="validate"></td>
            </tr>

        </table>
        <p>* - obowiązkowe</p>
        <br>
        <input type="submit" class="btn btn-primary" value="Submit"/>
    </form>
    <% include header.ejs %>
    <% include footer.ejs %>
</body>
</html>
