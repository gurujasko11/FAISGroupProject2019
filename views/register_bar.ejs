<!DOCTYPE html>
<html>
    <% include head.ejs %>      <!--Include head section (same for all pages)-->
    <!--Javascripts includes-->
    <script src='/javascripts/alert.js' type='text/javascript' ></script>
    
    <!--Inline Javascript-->
    <script>
        function validateForm() 
        {
            var err = "";
            if(document.getElementsByName("email")[0].value === "")
                err += "Podaj e-mail\n";
            
            if(document.getElementsByName("password")[0].value === "")
                err += "Podaj hasło\n";
            
            //TODO: check repeated password
            
            if(document.getElementsByName("first_name")[0].value === "")
                err += "Podaj imię\n";    

            if(document.getElementsByName("last_name")[0].value === "")
                err += "Podaj nazwisko\n";    

            if(err == "") return true;
            else 
            {
                document.getElementById("error").innerHTML = err;

                return false;
            }
        }
    </script>
    
    <body">
        <div id="page" class=page style="overflow: hidden;">      <!--Div page with id=page - main container-->
            <h1><%= title %></h1>
            
            <form method="POST" action="/register_bar" onsubmit="return validateForm();">
                <table>
                    <tr>
                        <td>
                            Nazwa baru: 
                        </td>
                        <td>
                            <input tabindex="100" type="text" name="bar_name">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            E-mail: 
                        </td>
                        <td>
                            <input tabindex="100" type="email" name="email">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Hasło: 
                        </td>
                        <td>
                            <input tabindex="100" type="password" name="password">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Potwierdz hasło: 
                        </td>
                        <td>
                            <input tabindex="100" type="password" id="repeated_password">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Telefon: 
                        </td>
                        <td>
                            <input tabindex="100" type="text" name="telephone">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Miasto: 
                        </td>
                        <td>
                            <input tabindex="100" type="text" name="city">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ulica: 
                        </td>
                        <td>
                            <input tabindex="100" type="text" name="street">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Numer budynku: 
                        </td>
                        <td>
                            <input tabindex="100" type="text" name="building_number">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Numer lokalu*: 
                        </td>
                        <td>
                            <input tabindex="100" type="text" name="local_number">
                        </td>
                    </tr>
                </table>
                <p>* - opcjonalne</p>
                <br>
                <pre id="error" style="color:red"></pre>
                <input type="submit" tabindex="100" value="Wyślij">
            </form>

        </div>
        <% include header.ejs %>      <!--Include header (top menu logo etc)-->
        <% include footer.ejs %>      <!--Include footer-->
    </body>
</html>
