<!DOCTYPE html>
<html>
    <% include head.ejs %>      <!--Include head section (same for all pages)-->
    <!--Javascripts includes-->
    <script src='/javascripts/alert.js' type='text/javascript' ></script>

    <script>
    function getMessages()
    {
        var msg = "<%= (!!locals.msg)?msg:'' %>";
        var type = "<%= (!!locals.type)?type:'' %>";
        var flash_messages = "";
        
        
        if(msg != '')
        {
            if(type == 'ERROR') AlertError("Błąd!", msg);
            else if(type == 'SUCCESS') AlertSuccess("Sukces", msg);
        }
        if(flash_messages != '') {
            AlertSuccess("Sukces", flash_messages);
        }
    }
    </script>


    <body onLoad='getMessages()'>
        <div id="alerts"></div><br>
        <% if (flash_messages) { %>
            <p><%= flash_messages %></p>
            <% } %>
        <div id="page" class=page>      <!--Div page with id=page - main container-->
            <form>
                Wyszukaj: <input type="text" id="search" tabindex="100" style="width: 70%">
                <input type="button" tabindex="100" value="Szukaj" onclick="AlertWarning('Błąd','Ta funkcjonalność nie jest zrobiona.')">
                <br>
                <input type="radio" tabindex="100" id="bary" name="opt" value="bary" checked>
                <label for="bary" style="width: 75%"><span></span>Wyszukaj bary po nazwie</label>
                <br>
                <input type="radio" tabindex="100" id="mecze" name="opt" value="macze">
                <label for="mecze" style="width: 75%"><span></span>Wyszukaj macze po drużynach</label>
                <br>
            </form>
        </div>
        <% include header.ejs %>      <!--Include header (top menu logo etc)-->
        <% include footer.ejs %>      <!--Include footer-->
    </body>
</html>
